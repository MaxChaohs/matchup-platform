{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "jsx": "preserve",
    "baseUrl": "..",
    "paths": {},
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["backend/**/*", "index.ts"],
  "exclude": ["node_modules", "../node_modules", "../src"]
}

